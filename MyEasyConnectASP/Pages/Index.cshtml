@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="app">
    <header>
        <nav>
            <img id="logo" src="images/logo-easy-connect_SBS.png" alt="Logo pagina">
            <ul>
                <li id="senior">
                    <img id="imagenUsuario" alt="foto de usuario" src="~/images/senior.png">
                    <strong id="nombreUsuario">@Model.Worker.Worker.Name @Model.Worker.Worker.FirstSurname</strong>
                </li>
                <li class="nav-options">
                    <img src="images/config.png" alt="Configuracion">
                    <strong>SETTINGS</strong>
                </li>
                <li><img class="separator" src="images/dot3.png" alt="separador"></li>
                <li id="logout" class="nav-options">
                    <img src="images/logout.png" alt="logout">
                    <strong>LOGOUT</strong>
                </li>
            </ul>
        </nav>
        <div class="clear"></div>
    </header>

    <main>

        <!-- list of the menu options -->
        <section id="menu-wrapper">
            <div class="menu-actions text-primary">
                <img class="layer2" src="images/layer 2.png" alt="opciones">
                <div class="action-data">
                    <img src="images/warnings-off2.png" alt="warning icon">
                    <p>ALERTS AND MESSAGING</p>
                </div>
                <div class="badge">
                    <img src="images/ellipse 1.png">
                    <p>2</p>
                </div>
                <img class="layer3" src="images/layer 3.png" alt="">
            </div>

            <div class="menu-actions text-primary">
                <img class="layer2" src="images/layer 2.png" alt="opciones">
                <div class="action-data">
                    <img src="images/reminders-calendar.png" alt="calendar icon">
                    <p>REMINDERS CALENDAR</p>
                </div>
                <div class="badge">
                    <img src="images/ellipse 1.png">
                    <p>1</p>
                </div>
                <img class="layer3" src="images/layer 3.png">
            </div>

            <div class="menu-actions text-primary">
                <img class="layer2" src="images/layer 2.png" alt="opciones">
                <div class="action-data">
                    <img src="images/ties2.png" alt="circle of care icon">
                    <p>CIRCLE OF CARE</p>
                </div>
                <div class="badge">
                    <img src="images/ellipse 1.png">
                    <p>2</p>
                </div>
                <img class="layer3" src="images/layer 3.png" alt="">
            </div>

            <div class="menu-actions text-primary">
                <img class="layer2" src="images/layer 2.png" alt="opciones">
                <div class="action-data">
                    <img src="images/daily-care-o-gram.png" alt="care-o-gram icon">
                    <p>DAILY CARE-O-GRAM</p>
                </div>
                <div class="badge">
                    <img src="images/ellipse 1.png">
                    <p>1</p>
                </div>
                <img class="layer3" src="images/layer 3.png" alt="">
            </div>

            <div class="menu-actions text-primary">
                <img class="layer2" src="images/layer 2.png" alt="opciones">
                <div class="action-data">
                    <img src="images/casemanager.png" alt="repository icon">
                    <p>REPOSITORY</p>
                </div>
                <img class="layer3" src="images/layer 3.png" alt="">
            </div>

            <div class="menu-actions text-primary">
                <img class="layer2" src="images/layer 2.png" alt="opciones">
                <div class="action-data">
                    <img src="images/my-health-reports (1).png" alt="reports icon">
                    <p>REPORTS</p>
                </div>
                <img class="layer3" src="images/layer 3.png" alt="">
            </div>

            <div class="menu-actions text-primary">
                <img class="layer2" src="images/layer 2.png" alt="opciones">
                <div class="action-data">
                    <img src="images/reward-points.png" alt="points icon">
                    <p>MY POINTS</p>
                </div>
                <p class="total-points">Total Points @Model.Worker.Worker.Points</p>
                <img class="layer3" src="images/layer 3.png" alt="">
            </div>
        </section>
        <!-- End of menu options -->
        <!-- Alerts and messaging -->
        <section id="messaging">
            <div class="banner text-primary">
                <img class="banner-img" src="images/warnings-off2.png" alt="warning icon">
                <p>alerts and messaging</p>
            </div>

            <div id="mail-wrapper" class="wrapper">

                <!-- alerts and messaging header -->
                <div id="mail-menu">

                    <ul>
                        <input type="checkbox">
                        <li class="selected">New Message</li>
                        <li>Inbox</li>
                        <li class="bg-primary">Sent</li>
                    </ul>

                    <input type="text" placeholder="Search">
                </div>

                <div>
                    <ul id="mail-list">
                        <li v-for="message in messages">
                            <div class="mail">
                                <div class="left">
                                    <input type="checkbox">
                                    <i class="fa fa-circle icon-selected"></i>
                                    <strong>{{message.SenderName}} {{message.SenderSurname}}</strong>
                                    <p>{{message.Subject}}</p>
                                </div>
                                <div class="right">
                                    <p>{{message.MailDate}}</p>
                                    <i class="fa fa-angle-right expand-mail"></i>
                                </div>
                            </div>

                            <article class="hidden">
                                <h3>{{message.Subject}}</h3>
                                <p>{{message.MessageBody}}</p>
                                <div>
                                    <button class="green-button">REPLY</button>
                                    <button class="red-button delete-mail">DELETE</button>
                                </div>

                            </article>
                            <div class="clear"></div>

                        </li>
                    </ul>
                    <div><p class="more-messages bg-primary">5 Previously Messages</p></div>
                    <div class="clear"></div>
                </div>
            </div>
        </section>
        <!-- End of Alerts and messaging -->
        <!-- Reminders calendar -->
        <section id="reminders">
            <div class="banner text-primary">
                <img class="banner-img" src="images/reminders-calendar.png" alt="warning icon">
                <p>reminders calendar</p>
                <img class="additionalbanner-img" src="images/Titular barra.png" alt="">
            </div>

            <!-- reminders section -->
            <div id="calendar-wrapper" class="wrapper">

                <div id="today-schedule">
                    <h3>TODAY</h3>
                    <p>2 JULY / MONDAY</p>

                    <div v-for="reminder in reminders" class="reminder-wrapper">
                        <div class="reminder">
                            <i class="fa fa-calendar"></i>
                            <div class="reminder-info">
                                <h4 id="reminderTitle">{{reminder.Title}}</h4>
                                <p id="reminderSubtitle">{{reminder.Subtitle}}</p>
                            </div>
                            <i class="fa fa-close expand-reminder" onclick="toggleReminder(event)"></i>
                        </div>
                        <div id="reminderDescription" class="expanded-reminder bg-primary ">
                            <p><strong>{{reminder.EventDate}}</strong></p>
                            <p>{{reminder.Description}}</p>
                            <div class="button-group">
                                <button class="green-button">CHANGE</button>
                                <button class="red-button">DONE</button>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>


                </div>
                <!-- calendar -->
                <div id="calendar">
                    <!-- calendar month picker -->
                    <div id="calendar-header" class=" text-primary">
                        <i class="fa fa-angle-left" id="next-month"></i>
                        <h3>JULY 2014</h3>
                        <i class="fa fa-angle-right"></i>
                    </div>

                    <div>
                        <table>
                            <thead id="calendar-head"></thead>
                            <tbody id="calendar-body"></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </section>
        <!-- End of Reminders Calendar -->
        <!-- Circle of care -->
        <section id="circle-care">
            <div class="banner text-primary">
                <img class="banner-img" src="images/ties2.png" alt="warning icon">
                <p>circle of care</p>
            </div>

            <div id="circle-wrapper" class="wrapper text-primary">
                <!-- Navigator from circle care -->
                <div id="circle-nav">
                    <div><p>FIND</p></div>
                    <div class="selected-nav"><p>MY CIRCLE OF CARE</p></div>
                    <div class="pending">
                        <p>PENDING</p>
                        <div class="care-badge">
                            <img src="images/ellipse 1.png">
                            <p>1</p>
                        </div>
                    </div>
                </div>

                <div id="my-circle" class="bg-primary">


                    <p class="circle-info">For organize Drag & Drop in the groups</p>
                    <div id="team-wrapper"></div>
                </div>
            </div>
        </section>
    </main>
</div>
<!-- End of circle care -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/locale/es.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<script src="js/main.js"></script>